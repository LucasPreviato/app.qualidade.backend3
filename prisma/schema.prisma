// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Unit {
  id           Int            @id @default(autoincrement())
  name         String         @unique
  email        String?
  phone        String?
  departments  Department[]
  address      Address?
  collaborator Collaborator[]
}

model Department {
  id           Int            @id @default(autoincrement())
  unitId       Int
  name         String
  initials     String
  email        String?
  phone        String?
  unit         Unit           @relation(fields: [unitId], references: [id])
  Collaborator Collaborator[]
}

model Address {
  id         Int     @id @default(autoincrement())
  street     String?
  number     String?
  complement String?
  district   String?
  city       String?
  cep        String? @unique
  uf         String?
  unit       Unit?   @relation(fields: [unitId], references: [id])
  unitId     Int?    @unique
}

model JobCategory {
  id         Int          @id @default(autoincrement())
  name       String       @unique
  occupation Occupation[]
}

model Occupation {
  id                  Int            @id @default(autoincrement())
  name                String         @unique
  version             Int            @default(autoincrement())
  revisionAt          DateTime       @default(now())
  alterations         String
  skills              String?
  formation           String?
  mandatoryExperience String?
  desirableExperience String?
  tasks               String?
  jobcategory         JobCategory    @relation(fields: [jobCategoryId], references: [id])
  jobCategoryId       Int
  Collaborator        Collaborator[]
}

model Collaborator {
  id                   Int        @id @default(autoincrement())
  admissionAt          DateTime
  name                 String
  email                String
  bond                 Bond       @default(CLT)
  status               Status     @default(ACTIVE)
  tasks                String?
  personalpresentation String?
  fiveYears            String?
  pros                 String?
  cons                 String?
  obsGeneral           String?
  unit                 Unit       @relation(fields: [unitId], references: [id])
  unitId               Int
  department           Department @relation(fields: [departmentId], references: [id])
  departmentId         Int
  occupation           Occupation @relation(fields: [occupationId], references: [id])
  occupationId         Int
}

enum Bond {
  CLT
  PJ
  COOPERATIVE
  TRAINEE
  OWNER
  PARTNER
  OUTSOURCED
}

enum Status {
  ACTIVE
  EXPERIENCE
  MOVEMENT
  NA
  AWAY
}

model User {
  id       String @id @default(cuid())
  name     String
  login    String
  password String
}
